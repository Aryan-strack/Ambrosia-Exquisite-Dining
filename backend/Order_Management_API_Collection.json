{
  "info": {
    "name": "Order Management API",
    "description": "Complete API collection for Order Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Orders",
      "item": [
        {
          "name": "Get All Orders (Admin/Staff)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders/",
              "host": ["{{base_url}}"],
              "path": ["orders", ""]
            }
          }
        },
        {
          "name": "Get My Orders (Customer)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders/my",
              "host": ["{{base_url}}"],
              "path": ["orders", "my"]
            }
          }
        },
        {
          "name": "Get Orders by Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders/?status=pending",
              "host": ["{{base_url}}"],
              "path": ["orders", ""],
              "query": [
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Order",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('order_id', response.data._id);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Create Orders",
      "item": [
        {
          "name": "Create Dine-in Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"menuItem\": \"{{menu_id}}\",\n      \"quantity\": 2,\n      \"price\": 15.99\n    }\n  ],\n  \"orderType\": \"dine-in\",\n  \"paymentMethod\": \"cash\",\n  \"tableNumber\": 5,\n  \"specialInstructions\": \"Extra spicy please\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/",
              "host": ["{{base_url}}"],
              "path": ["orders", ""]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Order created successfully', function () {",
                  "    pm.response.to.have.status(201);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.environment.set('order_id', response.data._id);",
                  "    console.log('âœ… Order created:', response.data.orderNumber);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Delivery Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"menuItem\": \"{{menu_id}}\",\n      \"quantity\": 1,\n      \"price\": 24.99\n    }\n  ],\n  \"orderType\": \"delivery\",\n  \"paymentMethod\": \"card\",\n  \"deliveryAddress\": {\n    \"street\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\"\n  },\n  \"specialInstructions\": \"Please ring the doorbell\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/",
              "host": ["{{base_url}}"],
              "path": ["orders", ""]
            }
          }
        },
        {
          "name": "Create Takeaway Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"menuItem\": \"{{menu_id}}\",\n      \"quantity\": 3,\n      \"price\": 8.99\n    }\n  ],\n  \"orderType\": \"takeaway\",\n  \"paymentMethod\": \"card\",\n  \"specialInstructions\": \"No onions please\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/",
              "host": ["{{base_url}}"],
              "path": ["orders", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Update Order Status",
      "item": [
        {
          "name": "Update Order Status to Confirmed",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"confirmed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "status"]
            }
          }
        },
        {
          "name": "Update Order Status to Preparing (Chef)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"preparing\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "status"]
            }
          }
        },
        {
          "name": "Update Order Status to Ready",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"ready\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "status"]
            }
          }
        },
        {
          "name": "Complete Order",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Cancel Orders",
      "item": [
        {
          "name": "Cancel Order",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/cancel",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "cancel"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    }
  ]
}

