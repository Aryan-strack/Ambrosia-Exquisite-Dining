{
  "info": {
    "name": "Payment Management API",
    "description": "Complete API collection for Payment Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Payment Processing",
      "item": [
        {
          "name": "Create Payment Intent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 4999,\n  \"currency\": \"usd\",\n  \"orderId\": \"{{order_id}}\",\n  \"description\": \"Payment for order #{{order_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/create-payment-intent",
              "host": ["{{base_url}}"],
              "path": ["payments", "create-payment-intent"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('paymentIntentId', response.data.clientSecret);",
                  "    console.log('âœ… Payment intent created');",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Confirm Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentIntentId\": \"{{paymentIntentId}}\",\n  \"orderId\": \"{{order_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/confirm-payment",
              "host": ["{{base_url}}"],
              "path": ["payments", "confirm-payment"]
            }
          }
        },
        {
          "name": "Process Cash Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{order_id}}\",\n  \"paymentMethod\": \"cash\",\n  \"amount\": 49.99\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/cash",
              "host": ["{{base_url}}"],
              "path": ["payments", "cash"]
            }
          }
        }
      ]
    },
    {
      "name": "Get Payment Information",
      "item": [
        {
          "name": "Get All Payments (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/payments/",
              "host": ["{{base_url}}"],
              "path": ["payments", ""]
            }
          }
        },
        {
          "name": "Get Payment by Order ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/payments/order/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["payments", "order", "{{order_id}}"]
            }
          }
        },
        {
          "name": "Get Payment History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/payments/history",
              "host": ["{{base_url}}"],
              "path": ["payments", "history"]
            }
          }
        },
        {
          "name": "Get Payment Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/payments/{{payment_id}}",
              "host": ["{{base_url}}"],
              "path": ["payments", "{{payment_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Refund Processing",
      "item": [
        {
          "name": "Create Refund",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentId\": \"{{payment_id}}\",\n  \"orderId\": \"{{order_id}}\",\n  \"amount\": 49.99,\n  \"reason\": \"Order cancelled by customer\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/refund",
              "host": ["{{base_url}}"],
              "path": ["payments", "refund"]
            }
          }
        },
        {
          "name": "Get Refund Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/payments/refund/{{refund_id}}",
              "host": ["{{base_url}}"],
              "path": ["payments", "refund", "{{refund_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Payment Webhooks",
      "item": [
        {
          "name": "Stripe Webhook Handler",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "{{stripe_signature}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"payment_intent.succeeded\",\n  \"data\": {\n    \"object\": {\n      \"id\": \"pi_123456789\",\n      \"amount\": 4999,\n      \"status\": \"succeeded\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/webhook",
              "host": ["{{base_url}}"],
              "path": ["payments", "webhook"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    }
  ]
}

